{% extends "SpartakUserBundle::layout.html.twig" %}

{% block title %}{{ 'layout.login'|trans }}{{ parent() }}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="col-sm-6 col-md-4 col-md-offset-4">
    <h1 class="text-center login-title">{{ 'layout.login'|trans }} Ã  MOPP</h1>
    <div class="account-wall">
        <img class="profile-img" src="{{ asset('img/photo.jpg') }}" alt="" />

        {% if error %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Erreur !</strong><br/> {{ error|trans }}
            </div>
        {% endif %}

        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <input type="text" class="form-control" id="username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" name="_username" required autofocus />
            
            <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password" required />
            
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
            <label class="checkbox pull-left">
                <input type="checkbox" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans }}
            </label>
            
            <span class="clearfix"></span>
        </form>
    </div>
    <a href="{{ path("fos_user_registration_register") }}" class="text-center new-account">{{ 'layout.register'|trans }} </a>
</div>
{% endblock fos_user_content %}